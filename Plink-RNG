local player = game.Players.LocalPlayer 
local gui = Instance.new("ScreenGui", player.PlayerGui) 

local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0, 500, 0, 400) -- Larger frame
frame.Position = UDim2.new(0.5, -250, 0.5, -200)
frame.BackgroundColor3 = Color3.new(0.2, 0.2, 0.2) -- Darker background
frame.BorderSizePixel = 0
frame.ClipsDescendants = true

-- Adding UIStroke for rounded corners
local stroke = Instance.new("UIStroke", frame)
stroke.Thickness = 4
stroke.Color = Color3.new(0, 0.8, 0.2)
stroke.Transparency = 0.5

-- Title Label
local titleLabel = Instance.new("TextLabel", frame)
titleLabel.Size = UDim2.new(1, 0, 0, 50)
titleLabel.Position = UDim2.new(0, 0, 0, 0)
titleLabel.Text = "PLINK RNG 1M CASH"
titleLabel.BackgroundColor3 = Color3.new(0.1, 0.1, 0.1)
titleLabel.TextColor3 = Color3.new(1, 1, 1)
titleLabel.Font = Enum.Font.SourceSansBold
titleLabel.TextScaled = true
titleLabel.BorderSizePixel = 0

-- Close button in the top right corner
local closeButton = Instance.new("TextButton", frame)
closeButton.Size = UDim2.new(0, 50, 0, 50)
closeButton.Position = UDim2.new(1, -60, 0, 10) -- Top right corner
closeButton.Text = "âœ–" -- Using a cross character for a cleaner look
closeButton.BackgroundColor3 = Color3.new(1, 0, 0) 
closeButton.TextColor3 = Color3.new(1, 1, 1) 
closeButton.Font = Enum.Font.SourceSansBold
closeButton.TextScaled = true
closeButton.BorderSizePixel = 0
closeButton.AutoButtonColor = false
closeButton.MouseButton1Click:Connect(function()
    gui:Destroy() -- Hides the GUI by destroying it
end)

local button = Instance.new("TextButton", frame)  
button.Size = UDim2.new(0, 300, 0, 70) 
button.Position = UDim2.new(0.5, -150, 0.4, 0) 
button.Text = "Toggle Teleport"  
button.BackgroundColor3 = Color3.new(0, 0.6, 1) 
button.TextColor3 = Color3.new(1, 1, 1) 
button.Font = Enum.Font.SourceSansBold
button.TextScaled = true
button.BorderSizePixel = 0
button.AutoButtonColor = false

local teleporting = false 
local teleportCoroutine  

local function teleport()     
    while teleporting do         
        player.Character:PivotTo(CFrame.new(Vector3.new(-371, 241, 513)))         
        wait(0.5) -- Slower speed     
    end 
end  

button.MouseButton1Click:Connect(function()     
    teleporting = not teleporting     
    if teleporting then         
        teleportCoroutine = coroutine.create(teleport)         
        coroutine.resume(teleportCoroutine)     
    end 
end)
